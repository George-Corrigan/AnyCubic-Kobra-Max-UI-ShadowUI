<div class="header">
    <div class="title shadow-normal"><img src="/images/home-house.png" height="14" /> &gt;
        @Model.GetCultureText("System") &gt; @Model.GetCultureText("Temperature")
        <div class="screen-number-right">[@Model.CurrentPage]</div>
    </div>
</div>
<div class="body">
    <table border=0 cellpadding=0 cellspacing=0 width="100%">
        <colgroups><col width="50%"><col width="50%"></colgroups>
        <tr><td colspan=2><div class="info2 shadow-normal">@Model.GetCultureText("CurrentBedTemperature")<div class="label-suffix">°C</div></div></td></tr>
        <tr><td colspan=2><div class="info2 shadow-normal">@Model.GetCultureText("TargetBedTemperature")<div class="label-suffix">°C</div><div class="spinner-left spinner-left-@Model.CssClass">&nbsp;</div><div class="spinner-right spinner-right-@Model.CssClass">&nbsp;</div></div></td></tr>
        <tr><td colspan=2><div class="info2 shadow-normal">@Model.GetCultureText("CurrentNozzleTemperature")<div class="label-suffix">°C</div></div></td></tr>
        <tr><td colspan=2><div class="info2 shadow-normal">@Model.GetCultureText("TargetNozzleTemperature")<div class="label-suffix">°C</div><div class="spinner-left spinner-left-@Model.CssClass">&nbsp;</div><div class="spinner-right spinner-right-@Model.CssClass">&nbsp;</div></div></td></tr>
    </table>
    <div class="buttons">
        <table border=0 cellpadding=0 cellspacing=0 width="100%">
            <colgroups><col width="50%"><col width="50%"></colgroups>
            <tr>
                <td><div class="button @Model.CssClass shadow-normal">@Model.GetCultureText("Reset")</div></td>
                <td><div class="button @Model.CssClass shadow-normal">@Model.GetCultureText("Set")</div></td>
            </tr>
        </table>
        <div class="button @Model.CssClass shadow-normal">@Model.GetCultureText("Back")</div>
    </div>
</div>